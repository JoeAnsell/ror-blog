<h1 class="mb-5">Reset Your Password</h1>

<div class="form container">
    <%= form_with model: @user, url: password_reset_path do |form| %>


    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "myname@gmail.com"%>
    </div>


    <div class="mb-3">
        <%= form.submit "Reset Password", class: "btn btn-primary" %>
    </div>

    <%= link_to "Forgot your password", new_password_reset_path %>

    <% end %>
</div>