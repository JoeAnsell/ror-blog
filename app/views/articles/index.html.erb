<h1 class="mb-5">Eggs</h1>

<h3 class="mb-3">Our blog has <%= Article.public_count %> articles and counting!</h3>


<ul class="list-group mx-auto container">
    <% @articles.each do |article| %>
    <% unless article.archived? %>
    <li class="list-group-item list-group-item-action mb-4">
        <a href="/articles/<%= article_path(article) %>">
            <%= link_to article.title, article %>
        </a>
    </li>
    <% end %>
    <% end %>
</ul>

<%= link_to "New Article", new_article_path,  class: "btn btn-primary"%>