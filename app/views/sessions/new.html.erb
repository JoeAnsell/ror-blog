<h1 class="mb-5">Sign in</h1>

<div class="form container">
    <%= form_with model: @user, url: session_path do |form| %>


    <div class="mb-3">
        <%= form.label :email%>
        <%= form.text_field :email, class: "form-control", placeholder: "myname@gmail.com"%>
    </div>

    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "string password please"%>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign in", class: "btn btn-primary" %>
    </div>

    <% end %>

    <%= link_to "Forgot your password?", new_password_reset_path %>


    <div class="mt-5 p-4 bg-light rounded">
        <p class="fs-4 fw-bold mb-3 ">Don't have an account?</p>
        <%= link_to "Sign Up", new_registration_path, class: "btn btn-outline-primary w-100" %>
    </div>
</div>