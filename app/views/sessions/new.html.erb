<h1 class="mb-5">Log In</h1>

<div class="form container">
    <%= form_with model: @user, url: session_path do |form| %>


    <div class="mb-3">
        <%= form.label :email%>
        <%= form.text_field :email, class: "form-control", placeholder: "myname@gmail.com"%>
    </div>

    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "string password please"%>
    </div>

    <div class="mb-3">
        <%= form.submit "Log In", class: "btn btn-primary" %>
    </div>

    <% end %>

    <%= link_to "Forgot your password?", new_password_reset_path %>
</div>