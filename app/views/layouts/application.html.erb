<!DOCTYPE html>
<html>
  <head>
    <title>RorBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>  

    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>


  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <div class="collapse navbar-collapse flex space-between justify-content-between" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "nav-link" %>
            </li>
          </ul>
          <ul class="navbar-nav gap-2">
            <% if user_signed_in? %>
              <li class="nav-item d-flex align-items-center me-2">
                <p class="mb-0"><%= current_user.email %></p>
              </li>
              <li class="nav-item ">
                <%= link_to "My Articles", my_articles_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item ">
                <%= link_to "Create Article", new_article_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item ">
                <%= link_to "Edit Password", edit_password_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item ">
                <%= button_to "Log Out", session_path, method: :delete, class: "btn btn-outline-secondary"%>
              </li>
            <% else %>
              <li class="nav-item ">
                <%= link_to "Sign Up", new_registration_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item ">
                <%= link_to "Log In", new_session_path, class: "btn btn-outline-secondary" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>


    <main class="container-sm mx-auto pt-5 px-3 md:px-5 ">
      <% if notice %>
        <div class="alert alert-success d-inline-block" role="alert"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger d-inline-block" role="alert"><%= alert %></div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
