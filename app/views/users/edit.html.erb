<h1 class="mb-5">Edit User Information</h1>

<div class="container">
    <%= form_with model: @user, local: true, html: { class: "form" } do |form| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="mb-4">
        <%= form.label :user_name , class: 'mb-2'%>
        <%= form.text_field :user_name, size: "70x5", class: 'form-control mb-2'%>
        <% @user.errors.full_messages_for(:user_name).each do |message| %>

        <div class="ms-1 text-danger"><%= message %></div>
        <% end %>
    </div>

    <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>

    <div class="actions">
        <%= form.submit "Update User" %>
    </div>
    <% end %>
</div>